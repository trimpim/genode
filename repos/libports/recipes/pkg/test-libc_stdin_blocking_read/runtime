<runtime ram="266M" caps="1000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="5" />
		<log meaning="succeeded">Tests finished</log>
		<log meaning="failed">Error: </log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="posix.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="test-libc_stdin_client"/>
		<rom label="test-libc_stdin_server"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="Timer"/>
		</parent-provides>

		<default caps="100"/>
		<default-route>
			<any-service> <parent/> <any-child/> </any-service>
		</default-route>

		<start name="server">
			<binary name="test-libc_stdin_server"/>
			<resource name="RAM" quantum="2M"/>
			<provides>
				<service name="Terminal"/>
			</provides>
			<config/>
		</start>

		<start name="client">
			<binary name="test-libc_stdin_client"/>
			<resource name="RAM" quantum="2M"/>
			<config>
				<libc stdin="/dev/terminal" stdout="/dev/terminal" stderr="/dev/log" rtc="/dev/rtc"/>
				<vfs rtc="/dev/rtc">
					<dir name="dev">
						<log/> <null/>
						<inline name="rtc">2000-01-01 00:00</inline>
						<terminal label="terminal"/>
					</dir>
				</vfs>
			</config>
		</start>

	</config>
</runtime>
